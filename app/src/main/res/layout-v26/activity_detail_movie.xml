<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".presentation.navigation.detail.DetailMovieActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/candal"
        android:includeFontPadding="true"
        android:text="@string/imbd"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="start"
        android:id="@+id/txDescriptionMovieTitleDetail"
        app:layout_constraintStart_toEndOf="@+id/ivPosterMovieDetail"
        app:layout_constraintTop_toBottomOf="@+id/category_movie_detail" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_trailer_detail"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/ivPlayMovieDetail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivPortadaMovieDetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_play_circle_outline" />

        <ImageView
            android:id="@+id/ivPortadaMovieDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_movie_detail"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/ivPosterMovieDetail"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/logo"
            tools:ignore="NotSibling" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/category_movie_detail"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/ic_baseline_star_24" />

            <TextView
                android:id="@+id/textView_detailMovie_star"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="15sp"
                tools:text="8.7" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txDescriptionMoviePortadaDetail"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="@string/trailer_oficial"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:justificationMode="inter_word"
            app:layout_constraintStart_toEndOf="@+id/ivPosterMovieDetail"
            app:layout_constraintTop_toBottomOf="@+id/category_movie_detail" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>