<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/ly_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/card_movie_height"
    android:background="#FEFEFE"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewLinearHorizontalPrincipal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/movie_item_image_height"
                android:layout_marginTop="@dimen/movie_small_space"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_bookmark_plus" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/ic_baseline_stars_24" />

            <TextView
                android:id="@+id/textView_linearHorizontal_star"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="8.7" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView_linearHorizontal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/movie_small_space"
            android:layout_marginTop="@dimen/movie_small_space"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/imageViewLinearHorizontalPrincipal"
            app:layout_constraintTop_toTopOf="@id/imageViewLinearHorizontalPrincipal"
            tools:text="Sully" />

        <!--    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/very_small_space"
        android:clickable="false"
        android:isIndicator="false"
        android:numStars="5"
        app:layout_constraintStart_toStartOf="@id/textView_title"
        app:layout_constraintTop_toBottomOf="@id/textView_title" />-->

        <!--        app:layout_constraintTop_toBottomOf="@id/ratingBar"-->


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/ic_outline_info_24" />


    </LinearLayout>
</androidx.cardview.widget.CardView>